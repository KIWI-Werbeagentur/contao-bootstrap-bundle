{% extends "@Contao/content_element/_base.html.twig" %}

{% if data.layout_content_alignment is defined and data.layout_content_alignment  %}
  {% set attributes = attrs(attributes|default)
    .addClass('text-' ~ data.layout_content_alignment)
  %}
{% endif %}

{% if type == 'headline' and data.bootstrap_headline_class %}
    {% set attributes = attrs(attributes|default).addClass(data.bootstrap_headline_class) %}
{% endif %}

{% if data.col is defined and data.col %}
    {% set attributes = attrs(attributes|default)
        .addClass(data|getBootstrapColumnClasses)
    %}
{% endif %}

{% if data.hyperlink_button is defined and data.hyperlink_button %}
    {% set link_attributes = attrs(link_attributes|default)
        .addClass(data|getBootstrapButtonClasses)
    %}
{% endif %}

