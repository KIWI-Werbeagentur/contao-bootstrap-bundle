<?php $this->extend('form_row'); ?>

<?php $this->block('label'); ?>
  <?php if ($this->label): ?>
    <label for="ctrl_<?= $this->id ?>" class="form-label<?php if ($this->class): ?> <?= $this->class ?><?php endif; ?>">
      <?php if ($this->mandatory): ?>
        <span class="invisible"><?= $this->mandatoryField ?> </span><?= $this->label ?><span class="mandatory">*</span>
      <?php else: ?>
        <?= $this->label ?>
      <?php endif; ?>
    </label>
  <?php endif; ?>
<?php $this->endblock(); ?>

<?php $this->block('field'); ?>
  <input type="file" name="<?= $this->name ?>" id="ctrl_<?= $this->id ?>" class="upload form-control<?php if ($this->hasErrors()): ?> is-invalid<?php endif; ?><?php if ($this->class): ?> <?= $this->class ?><?php endif; ?>"<?= $this->getAttributes() ?><?php if ($this->bootstrapHelpBlock): ?> aria-describedby="ctrl_<?= $this->id ?>_text"<?php endif; ?>>
  <?php if ($this->bootstrapHelpBlock): ?>
    <div class="form-text" id="ctrl_<?= $this->id ?>_text"><?= $this->bootstrapHelpBlock ?></div>
  <?php endif; ?>
  <?php if ($this->hasErrors()): ?>
    <p class="invalid-feedback"><?= $this->getErrorAsString() ?></p>
  <?php endif; ?>
<?php $this->endblock(); ?>
