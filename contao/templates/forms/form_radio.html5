<?php $this->extend('form_row'); ?>

<?php $this->block('field'); ?>
  <fieldset id="ctrl_<?= $this->id ?>" class="radio_container<?php if ($this->hasErrors()): ?> is-invalid<?php endif; ?><?php if ($this->class): ?> <?= $this->class ?><?php endif; ?>"<?php if ($this->responsiveHelpBlock): ?> aria-describedby="ctrl_<?= $this->id ?>_text"<?php endif; ?>>

    <?php if ($this->label): ?>
      <legend class="float-none">
        <?php if ($this->mandatory): ?>
          <span class="invisible"><?= $this->mandatoryField ?> </span><?= $this->label ?><span class="mandatory">*</span>
        <?php else: ?>
          <?= $this->label ?>
        <?php endif; ?>
      </legend>
    <?php endif; ?>

    <?php foreach ($this->getOptions() as $option): ?>
      <?php if ('group_start' == $option['type']): ?>
        <fieldset<?php if ($this->hasErrors()): ?> class="is-invalid"<?php endif; ?>>
        <legend class="float-none"><?= $option['label'] ?></legend>
      <?php endif; ?>

      <?php if ('option' == $option['type']): ?>
        <div class="form-check<?php if ($this->responsiveInlineOptions): ?> form-check-inline<?php endif; ?><?php if ($this->hasErrors()): ?> is-invalid<?php endif; ?>">
            <input type="radio" name="<?= $option['name'] ?>" id="opt_<?= $option['id'] ?>" class="radio form-check-input<?php if ($this->hasErrors()): ?> is-invalid<?php endif; ?>" value="<?= $option['value'] ?>"<?= $option['checked'] ?><?= $option['attributes'] ?>>
            <label id="lbl_<?= $option['id'] ?>" for="opt_<?= $option['id'] ?>" class="form-check-label"><?= $option['label'] ?></label>
        </div>
      <?php endif; ?>

      <?php if ('group_end' == $option['type']): ?>
        </fieldset>
      <?php endif; ?>
    <?php endforeach; ?>
    <?php if ($this->responsiveHelpBlock): ?>
      <div class="form-text" id="ctrl_<?= $this->id ?>_text"><?= $this->responsiveHelpBlock ?></div>
    <?php endif; ?>
    <?php if ($this->hasErrors()): ?>
      <div class="invalid-feedback"><?= $this->getErrorAsString() ?></div>
    <?php endif; ?>

  </fieldset>
<?php $this->endblock(); ?>
