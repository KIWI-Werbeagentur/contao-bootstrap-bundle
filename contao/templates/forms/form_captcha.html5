<?php $this->extend('form_row'); ?>

<?php $this->block('label'); ?>
  <?php if ($this->label): ?>
    <label for="ctrl_<?= $this->id ?>"<?php if ($this->class): ?> class="<?= $this->class ?>"<?php endif; ?>>
      <span class="invisible"><?= $this->mandatoryField ?> </span><?= $this->label ?><span class="mandatory">*</span>
    </label>
  <?php endif; ?>
<?php $this->endblock(); ?>

<?php $this->block('field'); ?>
  <input type="text" name="<?= $this->name ?>" id="ctrl_<?= $this->id ?>" class="captcha mandatory form-control<?php if ($this->class): ?> <?= $this->class ?><?php endif; ?><?php if ($this->hasErrors()): ?> is-invalid<?php endif; ?>" value="" aria-describedby="captcha_text_<?= $this->id ?>"<?= $this->getAttributes() ?>>
  <div id="captcha_text_<?= $this->id ?>" class="captcha_text form-text<?php if ($this->class): ?> <?= $this->class ?><?php endif; ?>"><?= $this->getQuestion() ?></div>
  <?php if ($this->responsiveHelpBlock): ?>
    <div class="form-text" id="ctrl_<?= $this->id ?>_text"><?= $this->responsiveHelpBlock ?></div>
  <?php endif; ?>
  <input type="hidden" name="<?= $this->name ?>_hash<?= $this->hasErrors() ? 1 + $this->sum ** 2 : '' ?>" value="<?= $this->hasErrors() ? $this->getHash() : '' ?>">

  <?php if ($this->hasErrors()): ?>
    <div class="invalid-feedback"><?= $this->getErrorAsString() ?></div>
  <?php endif; ?>

  <?php if (!$this->hasErrors()): ?>
    <div style="<?= method_exists($this, 'cspInlineStyle') ? $this->cspInlineStyle('display:none') : 'display:none' ?>">
      <label for="ctrl_<?= $this->id ?>_hp">Do not fill in this field</label>
      <input type="text" name="<?= $this->name ?>_name" id="ctrl_<?= $this->id ?>_hp" value="">
    </div>
    <script src="<?= $this->getAjaxUrl() ?>" data-id="<?= $this->id ?>" data-name="<?= $this->name ?>" async></script>
  <?php endif ?>

<?php $this->endblock(); ?>
