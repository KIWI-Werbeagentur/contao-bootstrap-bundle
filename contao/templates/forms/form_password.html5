<?php $this->extend('form_row_double'); ?>

<?php $this->block('label'); ?>
  <?php if ($this->label): ?>
    <label for="ctrl_<?= $this->id ?>"<?php if ($this->class): ?> class="<?= $this->class ?>"<?php endif; ?>>
      <?php if ($this->mandatory): ?>
        <span class="invisible"><?= $this->mandatoryField ?> </span><?= $this->label ?><span class="mandatory">*</span>
      <?php else: ?>
        <?= $this->label ?>
      <?php endif; ?>
    </label>
  <?php endif; ?>
<?php $this->endblock(); ?>

<?php $this->block('field'); ?>
  <input type="password" name="<?= $this->name ?>" id="ctrl_<?= $this->id ?>" class="text password form-control<?php if ($this->hasErrors()): ?> is-invalid<?php endif; ?><?php if ($this->class): ?> <?= $this->class ?><?php endif; ?>" value="" autocomplete="new-password"<?= $this->getAttributes() ?><?php if ($this->responsiveHelpBlock): ?> aria-describedby="ctrl_<?= $this->id ?>_text"<?php endif; ?>>
<?php $this->endblock(); ?>

<?php $this->block('label2'); ?>
  <?php if ($this->confirmLabel): ?>
    <label for="ctrl_<?= $this->id ?>_confirm" class="confirm<?php if ($this->class): ?> <?= $this->class ?><?php endif; ?>">
      <?php if ($this->mandatory): ?>
        <span class="invisible"><?= $this->mandatoryField ?> </span><?= $this->confirmLabel ?><span class="mandatory">*</span>
      <?php else: ?>
        <?= $this->confirmLabel ?>
      <?php endif; ?>
    </label>
  <?php endif; ?>
<?php $this->endblock(); ?>

<?php $this->block('field2'); ?>
  <input type="password" name="<?= $this->name ?>_confirm" id="ctrl_<?= $this->id ?>_confirm" class="text password form-control<?php if ($this->hasErrors()): ?> is-invalid<?php endif; ?><?php if ($this->class): ?> <?= $this->class ?><?php endif; ?>" value="" autocomplete="new-password"<?= $this->getAttributes() ?>>
  <?php if ($this->responsiveHelpBlock): ?>
    <div class="form-text" id="ctrl_<?= $this->id ?>_text"><?= $this->responsiveHelpBlock ?></div>
  <?php endif; ?>
  <?php if ($this->hasErrors()): ?>
    <div class="invalid-feedback"><?= $this->getErrorAsString() ?></div>
  <?php endif; ?>
<?php $this->endblock(); ?>
