// Configuration
{% block config %}
    @import "{{ bootstrapStyles }}/functions";
    @import "../themevars-{{ themeName }}";
    @import "layoutvars-{{ layoutName }}";
    @import "../../../../vendor/kiwi/contao-bootstrap-bundle/assets/customization/row-cols-import.scss";
    @import "{{ bootstrapStyles }}/variables";
    @import "{{ bootstrapStyles }}/maps";
    $theme-colors: map-merge($theme-colors, $colors);
    @import "{{ bootstrapStyles }}/mixins";
    @import "{{ bootstrapStyles }}/utilities";
{% endblock config %}

// Layout & components from theme
{% block components %}
    {{ bootstrapComponents }}
{% endblock components %}

// Helpers
{% block helpers %}
    @import "{{ bootstrapStyles }}/helpers";
{% endblock helpers %}

// Utilities
{% block utils %}
    @import "{{ bootstrapStyles }}/utilities/api";
{% endblock utils %}

// Custom
{% block custom %}
    {{ customStyles }};
{% endblock custom %}

// Custom Styling
{% block design %}
    @import "../theme-{{ themeName }}";
    // @import "layout-{{ layoutName }}";
{% endblock design %}
