:root{
  --spacing-default: 2.5rem;
  --spacing-none: 0;
  --spacing-gap: #{$grid-gutter-width};
  --spacing-gap-half: #{$grid-gutter-width / 2};
  --spacing-xxs: .5rem;
  --spacing-xs: 1rem;
  --spacing-sm: 1.75rem;
  --spacing-md: 2.5rem;
  --spacing-lg: 4rem;
  --spacing-xl: 6rem;
  --spacing-xxl: 8rem;
}

$sizes: {{ sizes }};

@each $breakpoint in map-keys($grid-breakpoints) {
  @each $size in $sizes {
    @include media-breakpoint-up($breakpoint) {
      $infix: breakpoint-infix($breakpoint, $grid-breakpoints);
      .pt#{$infix}-#{$size} {
        --spacing-top: var(--spacing-#{$size});
      }
      .pb#{$infix}-#{$size} {
        --spacing-bottom: var(--spacing-#{$size});
      }
    }
  }
}

[data-spacing-top]{
  padding-top: var(--spacing-top);
}
[data-spacing-bottom]{
  padding-bottom: var(--spacing-bottom);
}