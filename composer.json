{
    "name": "kiwi/contao-bootstrap",
    "type": "contao-bundle",
    "keywords": ["contao", "bootstrap", "grid", "responsive", "css-framework"],
    "description": "This Contao bundle implements the possibility to assign bootstrap (css-framework) grid classes to contents and therefore flexibly align them via the CMS.",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Katrin Zimmermann",
            "homepage": "https://github.com/diekatrin"
        },
        {
            "name": "Patrick Josupeit",
            "homepage": "https://github.com/patrickjDE"
        },
        {
            "name": "KIWI. Werbeagentur GmbH",
            "homepage": "https://www.kiwi.de"
        }
    ],
    "suggest": {
        "kiwi/contao-blueprints": "Simplifies content creation with bootstrap settings for editors",
        "kiwi/contao-designer": "Manage bootstrap design settings via klickibunti in the CMS"
    },
    "require": {
        "php": "^8.3.11",
        "contao/core-bundle": "~5.3.18",
        "twbs/bootstrap": "~5.2.3",
        "kiwi/contao-responsive-base": "^1.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0",
        "kiwi/contao-wrapper-bundle": "<1.0.0"
    },
    "autoload": {
        "psr-4" : {
            "Kiwi\\Contao\\BootstrapBundle\\" : "src/"
        }
    },
    "extra":{
        "contao-manager-plugin": "Kiwi\\Contao\\BootstrapBundle\\ContaoManager\\Plugin"
    }
}